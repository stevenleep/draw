{
  "name": "chrome-drawing-extension",
  "version": "1.0.0",
  "description": "Chrome drawing and annotation extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:extension": "tsc && vite build && npm run copy:manifest && npm run organize:files",
    "copy:manifest": "cp public/manifest.json dist/",
    "organize:files": "rm -rf dist/src && cp -r public/icons dist/",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.258",
    "@types/fabric": "^5.3.10",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-web-extension": "^4.1.0"
  },
  "dependencies": {
    "fabric": "^5.3.0",
    "html2canvas": "^1.4.1"
  }
}
