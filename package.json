{
  "name": "chrome-drawing-extension",
  "version": "1.0.0",
  "description": "Chrome drawing and annotation extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:extension": "tsc && vite build && npm run copy:manifest && npm run organize:files",
    "copy:manifest": "cp public/manifest.json dist/",
    "organize:files": "rm -rf dist/src && cp -r public/icons dist/",
    "preview": "vite preview",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/chrome": "^0.0.258",
    "@types/fabric": "^5.3.10",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-svelte3": "^4.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "svelte-eslint-parser": "^1.3.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.37.0",
    "vite": "^5.0.0",
    "vite-plugin-web-extension": "^4.1.0"
  },
  "dependencies": {
    "fabric": "^5.3.0",
    "html2canvas": "^1.4.1"
  }
}
